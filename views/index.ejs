<!DOCTYPE html>
<html>

<head>
  <title><%= title %></title>
  <%- include('./components/imports'); -%>

  <style>
    .container {
      padding: 0;
    }

    #homeContainer {
      padding: 30px 0px;
      height: 100%;
      display: flex;
      justify-content: center;
      align-items: center;
      font-family: 'Poppins', sans-serif;
    }

    .row {
      width: 100%;
      display: flex;
      justify-content: space-between;
      align-items: center;
      flex-wrap: wrap;
    }

    .card {
      width: 100%;
      display: flex;
      justify-content: center;
      align-items: center;
      flex: 1;
      border: none;
    }

    .card-body {
      padding: 25px 5px;
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: left;
    }

    p {
      text-align: justify;
    }

    .card:nth-child(2) {
      margin: 0px 50px;
    }

    img {
      width: 100%;
      height: 250px;
      border-radius: 5px;
      -webkit-box-shadow: 10px 10px 20px 0px rgba(0, 0, 0, 0.08);
      -moz-box-shadow: 10px 10px 20px 0px rgba(0, 0, 0, 0.08);
      box-shadow: 10px 10px 20px 0px rgba(0, 0, 0, 0.08);
    }

    .row a {
      width: 100%;
      height: 40px;
      display: flex;
      align-items: center;
      justify-content: center;
      background-color: unset;
      border: 1px solid black;
      border-radius: 5px;
      color: black;
      -webkit-box-shadow: 10px 10px 20px 0px rgba(0, 0, 0, 0.08);
      -moz-box-shadow: 10px 10px 20px 0px rgba(0, 0, 0, 0.08);
      box-shadow: 10px 10px 20px 0px rgba(0, 0, 0, 0.08);
      transition: 300ms;
    }
    
    .row a:hover {
      background-color: rgb(0, 0, 0);
      color: white;
      border: none;
      text-decoration: none;
      transition: 300ms;
    }
  </style>
</head>

<body>
  <%- include('./components/navbar'); -%>

  <div class="container" id="homeContainer">
    <div class="row">
      <% posts.forEach((post) => { %>
      <%- include('./components/post_card.ejs', { post: post }) %>
      <% }) %>
    </div>
  </div>
</body>

</html>