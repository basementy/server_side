<!DOCTYPE html>
<html>

<head>
  <title><%= title %></title>
  <%- include('./components/imports'); -%>

  <style>
    @import url('https://fonts.googleapis.com/css?family=Poppins&display=swap');

    .container {
      padding: 0;
    }

    #postsContainer {
      width: 100%;
      height: 100%;
      padding: 40px 0px;
      font-family: 'Poppins', sans-serif;
    }

    .postList {
      height: 100%;
      display: flex;
      flex-direction: column;
      justify-content: flex-start;
      align-items: left;
    }

    .postItem {
      margin-bottom: 20px;
      height: 150px;
      display: flex;
      justify-content: left;
      align-items: center;
      /* border: 1px solid rgb(179, 179, 179); */
      border-radius: 5px;
    }

    .postImage {
      height: 100%;
      display: flex;
      justify-content: center;
      align-content: center;
    }

    .postItem img {
      width: 150px;
      height: 100%;
      margin-right: 20px;
      border-radius: 5px;
      /* filter: grayscale(100%); */
      -webkit-box-shadow: 5px 10px 15px 0px rgba(0, 0, 0, 0.08);
      -moz-box-shadow: 5px 10px 15px 0px rgba(0, 0, 0, 0.08);
      box-shadow: 5px 10px 15px 0px rgba(0, 0, 0, 0.08);
    }

    .postItem a {
      width: 150px;
      height: 40px;
      display: flex;
      align-items: center;
      justify-content: center;
      background-color: unset;
      border: 1px solid black;
      border-radius: 5px;
      color: black;
      -webkit-box-shadow: 10px 10px 20px 0px rgba(0, 0, 0, 0.08);
      -moz-box-shadow: 10px 10px 20px 0px rgba(0, 0, 0, 0.08);
      box-shadow: 10px 10px 20px 0px rgba(0, 0, 0, 0.08);
      transition: 300ms;
    }
    
    .postItem a:hover {
      background-color: rgb(0, 0, 0);
      color: white;
      border: none;
      text-decoration: none;
      transition: 300ms;
    }

    .postContent {
      display: flex;
      justify-content: space-between;
      flex-direction: column;
      height: 100%;
    }

    .postDescription {
      display: flex;
      align-items: left;
      flex-direction: column;
    }
  </style>
</head>

<body>
  <%- include('./components/navbar'); -%>

  <!-- Posts -->
  <div class="container" id="postsContainer">
    <div class="postList">
      <% posts.forEach((post) => { %>
      <%- include('./components/posts_item.ejs', { post : post }) %>
      <% }) %>
    </div>
  </div>

</body>

</html>