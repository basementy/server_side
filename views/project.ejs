<!DOCTYPE html>
<html>

<head>
	<title><%= project.title %></title>
	<%- include('./components/imports'); -%>

	<style>
		@import url('https://fonts.googleapis.com/css?family=Poppins&display=swap');
		@import url('https://fonts.googleapis.com/css?family=Merriweather&display=swap');

		.container {
			padding: 30px 0px;
			font-family: 'Poppins', sans-serif;
			display: flex;
			flex-direction: column;
			justify-content: center;
			align-items: center;
		}

		.projectImage {
			width: 100%;
			height: 300px;
			margin-bottom: 30px;
			display: flex;
			justify-content: center;
			align-items: center;
		}

		.projectImage img {
			width: 80%;
			height: 100%;
			object-fit: cover;
			border-radius: 10px;
			border-radius: 10px;
			-webkit-box-shadow: 10px 15px 20px 0px rgba(0, 0, 0, 0.05);
			-moz-box-shadow: 10px 15px 20px 0px rgba(0, 0, 0, 0.05);
			box-shadow: 10px 15px 20px 0px rgba(0, 0, 0, 0.05);
		}

		.projectTitle {
			margin-bottom: 20px;
		}

		.projectContent {
			width: 80%;
		}

		.projectContent h1 {
			font-weight: 600;
		}

		.projectContent h5 {
			opacity: 0.8;
		}

		.projectContent p {
			font-family: 'Merriweather', serif;
			font-size: 20px;
			text-align: justify;
			opacity: 0.9;
		}
	</style>
</head>

<body>
	<%- include('./components/navbar'); -%>

	<div class="container">

		<div class="projectImage">
			<img src="../public/images/<%= project.image %> " alt="">
		</div>

		<div class="projectContent">
			<div class="projectTitle">
				<h1><%= project.title %></h1>
				<h5><%= project.subject %></h5>
			</div>
			<div class="projectBody">
				<p><%= project.description %></p>
			</div>
		</div>
	</div>
</body>

</html>