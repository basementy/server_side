<div class="card">
  <img src="<%= `/images/${post.image}` %>">
  <div class="card-body">
    <h5 class="card-title">
      <%= post.title %>
    </h5>
    <p class="card-text">
      <%= post.description %>
    </p>
    <a href="/posts/<%=post.id%>" class="btn btn-primary">Ler mais</a>
  </div>
</div>