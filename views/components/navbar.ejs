<script>
	var adminstrationDropDownBtn = document.querySelector('#adminstrationDropDown')
	var dropDownBtn = document.querySelector('#contentDropdown')
	var dropDown = document.querySelector('.dropDown')
	var adminstrationDropDown = document.querySelector('.adminstrationDropDown')

	dropDownBtn.onclick = function() {
		adminstrationDropDown ? adminstrationDropDown.style.display = 'none' : ''
		dropDown.style.display == 'flex' ? dropDown.style.display = 'none' : dropDown.style.display = 'flex'
	}

	adminstrationDropDownBtn.onclick = function() {
		dropDown.style.display = 'none'
		adminstrationDropDown.style.display == 'flex' ? adminstrationDropDown.style.display = 'none' : adminstrationDropDown.style.display = 'flex'
	}
</script>